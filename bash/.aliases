#!/bin/bash

# directory navigation
alias ~="cd ~"
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# some ls aliases
alias la="ls -A"
alias ll="ls -Al"
alias lt="ls -haltr"

# npm shortcuts that only list top-level modules
alias l="npm list --depth=0 2>/dev/null"

# process finding
alias pg="pgrep -lf"

# network alias
alias ports="netstat -tulanp"
alias lookdevices="sudo nmap -sP 192.168.1.0/24"

# Homestead vm aliases
alias vm="homestead ssh"
alias vmc="homestead ssh -c $*"
alias vup="vagrant up"
alias hup="homestead up"

# Run a local server
alias server="browse http://localhost:9000 && python -m SimpleHTTPServer"

# App shorthands
alias g="git"
alias art="php artisan"
alias copy="xsel -ib"
